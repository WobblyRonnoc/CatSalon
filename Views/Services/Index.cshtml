@model IEnumerable<CatSalon.Models.DataAccess.Service>

@{
    ViewData["Title"] = "Index";
}
<div class="bg-light p-5 m-2 shadow">
    <h1 class="text-center display-5 p-1 mb-1">Services</h1>
    <div class="bg-primary bg-opacity-50 bg-gradient p-2 rounded border thick shadow p-3 mb-5">
        @foreach (var item in Model) {
                <div class="row bg-light m-2 bg-gradient bg-opacity-75 p-2 rounded border thick shadow p-3 mb-5 ">
                    <div class="col-md-4">
                        <p class="display-6">@Html.DisplayFor(modelItem => item.Title) </p>                            
                    </div>
                    <div class="col-md-5">
                        <p class="fw-bold">Description:</p>
                        <p>
                            @Html.DisplayFor(modelItem => item.Description)
                        </p>
                    </div>
                    <div class="col"></div>
                    <div class="col-md-2">
                        <h5 class="fw-bold align-content-md-center">
                            Price: $@Html.DisplayFor(modelItem => item.Price)
                        </h5>
                    </div>
                </div>
        }
    </div>
</div>