@{
    ViewData["Title"] = "Home Page";
}
<div class="container col-lg-12 bg-primary bg-opacity-50 bg-gradient p-2 rounded border thick shadow p-3 mb-5">
    <div class="row">
        <div class="col"></div>
            @if (Context.Session.GetString("userId") == null)
            {
                <div class="col-lg-6 p-4 pb-lg-5 bg-light bg-gradient p-2 rounded-pill border thick shadow p-3 my-5">
                    <div class="text-center align-content-center p-2">
                        <h1 class="display-4 ">Welcome To CatSalon!</h1>
                    </div>
                    <div class="container text-center ">
                        <div class="row pt-2">
                            <div class="col"></div>
                            <div class="col"></div>

                            <div class="col">
                                @Html.ActionLink("Sign Up", "Create", "Owners", null, new { @class = "btn btn-outline-success btn-lg rounded-pill text-nowrap shadow" })
                            </div>

                            <div class="col">
                                @Html.ActionLink("Log In", "Login", "Owners", null, new { @class = "btn btn-outline-success btn-lg rounded-pill text-nowrap shadow" })
                            </div>

                            <div class="col"></div>
                            <div class="col"></div>
                        </div>
                    </div>
                </div>
            }
        <div class="col"></div>
    </div>
    <div class="row p-3 text-center align-content-between">
        <div class="row bg-light bg-opacity-75 bg-gradient p-3 rounded border thick shadow p-3 mb-5 ">
            <div id="carouselCaptions" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
              </div>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="~/images/blanket.jpg" class="d-block w-100" alt="...">
                  <div class="carousel-caption d-none d-md-block bg-primary bg-opacity-75 bg-gradient p-2 rounded-pill border thick shadow p-3 mb-5">
                    <h5>Premium Brushing</h5>
                    <p>Keep your cat's fur looking fabulous!</p>
                  </div>
                </div>
                <div class="carousel-item">
                  <img src="~/images/brush.jpg" class="d-block w-100" alt="...">
                  <div class="carousel-caption d-none d-md-block bg-primary bg-opacity-75 bg-gradient p-2 rounded-pill border thick shadow p-3 mb-5">
                    <h5>Nail Clipping</h5>
                    <p>Keep your cat's claws short and safe</p>
                  </div>
                </div>
                <div class="carousel-item">
                  <img src="~/images/sleep.jpg" class="d-block w-100" alt="...">
                  <div class="carousel-caption d-none  d-md-block bg-primary bg-opacity-75 bg-gradient p-2 rounded-pill border thick shadow p-3 mb-5">
                    <h5>Hygiene</h5>
                    <p>Keep your cat healthy with our hygiene focused service</p>
                  </div>
                </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
        </div>
    </div>
</div>